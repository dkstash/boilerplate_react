{
    "name": "front-end-dev",
    "version": "1.0.0",
    "description": "Front-end development environment",
    "private": true,
    "main": "index.js",
    "scripts": {
        "watch": "webpack --watch",
        "start": "run-p start:dev start:api",
        "start:dev": "webpack-dev-server --open --config webpack.dev.js --port 8000",
        "start:api": "json-server tools/generator.js --port 3000",
        "build": "webpack --config webpack.prod.js"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@babel/cli": "^7.7.0",
        "@babel/core": "^7.7.2",
        "@babel/preset-env": "^7.7.1",
        "@babel/preset-react": "^7.7.0",
        "babel-loader": "^8.0.6",
        "clean-webpack-plugin": "^3.0.0",
        "css-loader": "^3.2.0",
        "eslint": "^6.7.2",
        "eslint-config-prettier": "^6.7.0",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-react": "^7.17.0",
        "faker": "^4.1.0",
        "file-loader": "^4.3.0",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "^3.2.0",
        "json-server": "^0.15.1",
        "mini-css-extract-plugin": "^0.8.0",
        "node-sass": "^7.0.0",
        "npm-run-all": "^4.1.5",
        "optimize-css-assets-webpack-plugin": "^5.0.3",
        "postcss-loader": "^3.0.0",
        "precss": "^4.0.0",
        "prettier": "^1.19.1",
        "react": "^16.11.0",
        "react-dom": "^16.11.0",
        "sass-loader": "^8.0.0",
        "style-loader": "^1.0.0",
        "terser-webpack-plugin": "^2.2.1",
        "webpack": "^4.41.2",
        "webpack-bundle-analyzer": "^3.6.0",
        "webpack-cli": "^3.3.10",
        "webpack-dev-server": "^3.9.0",
        "webpack-merge": "^4.2.2"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "ie 11",
            "edge >= 17",
            "chrome >= 75",
            "firefox >= 68"
        ]
    },
    "dependencies": {
        "bootstrap": "^4.3.1",
        "core-js": "^3.4.0",
        "jquery": "^3.4.1",
        "popper.js": "^1.16.0",
        "react-router-dom": "^5.1.2",
        "regenerator": "^0.14.2",
        "whatwg-fetch": "^3.0.0"
    },
    "prettier": {
        "useTabs": true
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "node": true,
            "es6": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:react/recommended",
            "plugin:prettier/recommended"
        ],
        "globals": {
            "Atomics": "readonly",
            "SharedArrayBuffer": "readonly"
        },
        "parserOptions": {
            "ecmaFeatures": {
                "jsx": true
            },
            "ecmaVersion": 2018,
            "sourceType": "module"
        },
        "plugins": [
            "react"
        ],
        "rules": {
            "indent": [
                "error",
                "tab"
            ],
            "linebreak-style": [
                "error",
                "windows"
            ],
            "quotes": [
                "error",
                "double",
                { "avoidEscape": true, "allowTemplateLiterals": false }
            ],
            "semi": [
                "error",
                "always"
            ]
        }
    }
}